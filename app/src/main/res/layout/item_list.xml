<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:contentDescription="status da Vacina"
            android:layout_gravity="center"
            android:id="@+id/item_icon_vacina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_check_64dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_nome_vacina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poliomelite aguda"
                android:textSize="15sp"
                android:paddingTop="10dp"/>
            <TextView
                android:id="@+id/item_data_vacina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/09/2017"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <TextView
            android:layout_weight="0"
            android:id="@+id/item_dose_vacina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dose 1/3"
            android:textAlignment="center"
            android:textSize="14sp"
            android:gravity="end"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>